{
  "name": "valyrianctx-vscode",
  "displayName": "Valyrian Context",
  "description": "Persistent AI coding context â€” auto-resume on workspace open",
  "version": "0.6.0",
  "publisher": "sukhad",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "valyrianctx.save",
        "title": "Valyrian Context: Save Context"
      },
      {
        "command": "valyrianctx.resume",
        "title": "Valyrian Context: Resume Context"
      },
      {
        "command": "valyrianctx.log",
        "title": "Valyrian Context: View Log"
      },
      {
        "command": "valyrianctx.diff",
        "title": "Valyrian Context: Show Diff"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "tsc"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0"
  }
}